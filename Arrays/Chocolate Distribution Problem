// GeeksForGeeks - Easy

class Solution
{
    public long findMinDiff (ArrayList<Integer> a, int n, int m)
    {
        if (m > n) {
            return -1;
        }
        Collections.sort(a);
        
        long minDiff = Long.MAX_VALUE;
        
        for (int i = 0; i + m - 1 < n; i++) {
            int diff = a.get(i + m - 1) - a.get(i);
            if (diff < minDiff) {
                minDiff = diff;
            }
        }
        
        return minDiff;
    }
}
