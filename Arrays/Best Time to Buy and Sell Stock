//Leetcode 121

class Solution {
    public int maxProfit(int[] prices) {
        int n = prices.length;
        if (n < 2)
            return 0;
        
        int smallest = prices[0];
        int largest = prices[0];
        int profit = 0;

        for (int i = 1; i < n; i++) {
            if (prices[i] < smallest) {
                smallest = prices[i];
            } else if (prices[i] - smallest > profit) {
                profit = prices[i] - smallest;
            }
        }

        return profit;
    }
}
