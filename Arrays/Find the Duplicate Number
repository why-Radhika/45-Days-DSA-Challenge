// Leetcode 287 - Medium

// 1. Brute Force Approach
class Solution {
    public int findDuplicate(int[] nums) {
        int n = nums.length;
        Arrays.sort(nums);
        for (int i = 1; i < n; i++){
            if (nums[i] == nums[i-1]){
                return nums[i];
            }
        }
        return 0;
    }
}

// 2. Optimized Approach - Using HashSet
class Solution {
    public int findDuplicate(int[] nums) {
        HashSet<Integer> elements = new HashSet<>();
        boolean exists;
        int result = 0;
        for(int i = 0; i < nums.length; i++){
            if (exists = elements.contains(nums[i])){
                result = nums[i];
            } else {
                elements.add(nums[i]);
            }
        }
        return result;
    }
}
